<Window x:Class="RazorEngineSandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RazorEngineSandbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Window.Resources>
    <ResourceDictionary>
      <local:MainWindowViewModel x:Key="ViewModel" />
    </ResourceDictionary>
  </Window.Resources>
  <Window.DataContext>
    <StaticResourceExtension ResourceKey="ViewModel"/>
  </Window.DataContext>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="150"/>
    </Grid.RowDefinitions>
    <TextBox Margin="5"/>
    <TextBox Grid.Column="1" Margin="5"/>
    <WebBrowser Grid.Column="2" Margin="5" Grid.RowSpan="2"/>
    <TextBlock Grid.Column="0" Grid.Row="1" Margin="5"/>
    <TextBlock Grid.Column="1" Grid.Row="1" Margin="5"/>
  </Grid>
</Window>
